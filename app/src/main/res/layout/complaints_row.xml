<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="9dp"
    app:cardCornerRadius="10dp"
    android:foreground="?selectableItemBackground"
    android:layout_margin="12dp"
    app:cardBackgroundColor="#edebeb">

    <LinearLayout
        android:id="@+id/linearLayoutID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/complaintsImageView"
            android:layout_width="match_parent"
            android:background="@drawable/complaintcardview"
            android:layout_height="140dp"

            android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Number : "
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/room_numberET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="405"
            android:textColor="@color/colorAccent"
            android:layout_gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/pc_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pc Number       : "
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/pc_numberET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC101"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details               : "
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/detailsET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ram isn't working"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status                :  "
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/statusET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="solved"
                android:textColor="@color/colorAccent"
                android:layout_gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>